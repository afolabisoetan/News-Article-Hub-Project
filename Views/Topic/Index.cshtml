@using News_Article_Project.ViewModels
@model TopicDetailsViewModel
@using Newtonsoft.Json

<h2>@Model.TopicName – Bias Breakdown</h2>

<canvas id="biasChart"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const biasData = @Html.Raw(JsonConvert.SerializeObject(Model.BiasCounts));

    const ctx = document.getElementById('biasChart');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: Object.keys(biasData),
            datasets: [{
                label: 'Articles by Bias',
                data: Object.values(biasData),
                backgroundColor: ['#f87171', '#60a5fa', '#34d399']
            }]
        },
        options: {
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
</script>
