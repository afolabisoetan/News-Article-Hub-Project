@model News_Article_Project.ViewModels.TopicDetailsVM

@{
    ViewBag.Title = $"{Model.TopicName} - GlobalNews Articles";
}

<div class="container my-5">
    <!-- Topic Header -->
    <div class="card shadow-lg border-0 rounded-4 mb-5">
        <div class="card-header text-white fw-bold" style="background-color: #0078D7;">
            <h2 class="mb-0">@Model.TopicName</h2>
        </div>
        <div class="card-body bg-light">
            <p class="lead text-muted">@Model.TopicDescription</p>
        </div>
    </div>

    <!-- Articles Section -->
    <div class="row g-4">
        @if (Model.Articles != null && Model.Articles.Any())
        {
            foreach (var article in Model.Articles)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 rounded-4 h-100">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-primary">@article.Title</h5>

                            <p class="card-text text-dark small mb-3">
                                @article.Description
                            </p>

                            <p class="mb-2">
                                <strong>Source:</strong> @article.Source.Name <br />

                                    <span class="badge @(article.Source.Bias.Trim() == "Left" ? "bg-primary" :
                                    article.Source.Bias.Trim() == "Right" ? "bg-danger" :
                                    article.Source.Bias.Trim() == "Center" ? "bg-success" :
                                    "bg-secondary")">

                                    @(article.Source.Bias.Trim() == "Left" ? "Left Wing Source" :
                                    article.Source.Bias.Trim() == "Right" ? "Right Wing Source" :
                                    article.Source.Bias.Trim() == "Center" ? "Center Source" :
                                    article.Source.Bias.Trim())
                                </span>
                            </p>

                           
                            @if (article.BiasValue == 1)
                            {
                                <p class="fw-bold text-primary small">Note: This specific article has a far left bias.</p>
                            }
                            else if (article.BiasValue == 2)
                            {
                                <p class="fw-bold text-info small">Note: This specific article has a moderate left bias.</p>
                            }
                            else if (article.BiasValue == 3)
                            {
                                <p class="fw-bold text-success small">Note: This specific article has a balanced perspective.</p>
                            }
                            else if (article.BiasValue == 4)
                            {
                                <p class="fw-bold text-warning small">Note: This specific article has a moderate right bias.</p>
                            }
                            else if (article.BiasValue == 5)
                            {
                                <p class="fw-bold text-danger small">Note: This specific article has a far right bias.</p>
                            }

                            <a href="@article.Url" target="_blank" class="btn btn-outline-primary btn-sm rounded-3 mt-2">
                                Read Full Article
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center">
                <p class="text-muted">No articles found under this topic.</p>
            </div>
        }
    </div>

    <div class="text-center mt-5">
        <a href="/Home/Welcome" class="btn btn-primary rounded-3 px-4 py-2 shadow">
            <i class="bi bi-arrow-left-circle me-2"></i>Back to Welcome Page
        </a>
    </div>
</div>

<style>
    body {
        background-color: #e9f2ff;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .badge {
        font-size: 0.85rem;
        padding: 0.5em 0.75em;
    }

    .text-danger {
        color: #d9534f !important;
    }

    .text-warning {
        color: #f0ad4e !important;
    }

    .text-success {
        color: #5cb85c !important;
    }

    .text-info {
        color: #5bc0de !important;
    }

    .text-primary {
        color: #0078D7 !important;
    }
</style>
