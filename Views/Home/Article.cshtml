@model News_Article_Project.ViewModels.ArticleVM
@{
    ViewBag.Title = "Add Article";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center text-white fw-bold" style="background-color: #0078D7;">
                    <h3 class="mb-0">Add a News Article</h3>
                </div>

                <div class="card-body bg-light p-4">
                    @if (Model.message != null)
                    {
                        <div class="alert alert-danger text-center">@Model.message</div>
                    }

                    @using (Html.BeginForm("Article", "Home", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Article Title</label>
                            @Html.TextBoxFor(x => x.Title, new { @class = "form-control rounded-3 shadow-sm", placeholder = "Enter article title" })
                            <small class="form-text text-muted">We encourage you to make the article title unique.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Article URL</label>
                            @Html.TextBoxFor(x => x.Url, new { @class = "form-control rounded-3 shadow-sm", placeholder = "https://..." })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Description</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control rounded-3 shadow-sm", rows = 4, placeholder = "Briefly describe this article..." })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Topic</label>
                            @Html.DropDownListFor(
                                x => x.TopicName,
                                new SelectList(Model.Topics, "Name", "Name"),
                                "-- Select a Topic --",
                                new { @class = "form-select rounded-3 shadow-sm" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Source</label>
                            @Html.DropDownListFor(
                                x => x.SourceName,
                                new SelectList(Model.Sources, "Name", "Name"),
                                "-- Select a Source --",
                                new { @class = "form-select rounded-3 shadow-sm" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow">
                                <i class="bi bi-plus-circle me-2"></i>Add Article
                            </button>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/Home/Welcome" class="text-decoration-none fw-semibold" style="color: #0078D7;">
                    ← Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #e9f2ff;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .btn-primary {
        background-color: #0078D7;
        border: none;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }
</style>
