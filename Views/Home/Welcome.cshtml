@{
    ViewBag.Title = "Welcome to TrueGlobalNews";
}

<div class="container my-5 text-center">
    <div class="mb-5">
        <h1 class="fw-bold text-white">Welcome to TrueGlobalNews</h1>
        <p class="lead text-light">
            Stay informed with unbiased coverage, explore diverse perspectives, and visualize global narratives.
        </p>
    </div>

    <div class="row justify-content-center g-4">
        <!-- Card 1: World Map -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <img src="https://upload.wikimedia.org/wikipedia/commons/8/80/World_map_-_low_resolution.svg"
                     class="card-img-top rounded-top-4" style="height:200px; object-fit:cover;" alt="Map of the World">
                <div class="card-body bg-dark text-light">
                    <h5 class="card-title fw-semibold">Explore Global Topics</h5>
                    <p class="card-text small">
                        Dive into articles covering world events 
                    </p>
                </div>
            </div>
        </div>

        <!-- Card 2: Earth from Space -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <img src="https://upload.wikimedia.org/wikipedia/commons/9/97/The_Earth_seen_from_Apollo_17.jpg"
                     class="card-img-top rounded-top-4" style="height:200px; object-fit:cover;" alt="Earth from Space">
                <div class="card-body bg-dark text-light">
                    <h5 class="card-title fw-semibold">See the Bigger Picture</h5>
                    <p class="card-text small">
                        Gain a bigger picture by visualizing articles and their political biases.
                    </p>
                    <a href="/Topic/Index" class="btn btn-primary rounded-3 px-4">View Visualizations</a>
                </div>
            </div>
        </div>

        <!-- Card 3: Magnifying Glass -->
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">
                <img src="https://www.svgrepo.com/show/127033/magnifying-glass.svg"
                     class="card-img-top rounded-top-4 p-4" style="height:200px; object-fit:contain;" alt="Magnifying Glass">
                <div class="card-body bg-dark text-light">
                    <h5 class="card-title fw-semibold">Investigate the Details</h5>
                    <p class="card-text small">
                        Be a scholar and weigh the veracity of a news article by its political bias
                    </p>
                    <a href="/Home/About" class="btn btn-primary rounded-3 px-4">Learn more about us</a>
                </div>
            </div>
        </div>
    </div>

    <footer class="mt-5 text-muted small text-center">
        <hr style="border-color:#555;" />
        <p>&copy; @DateTime.Now.Year TrueGlobalNews — Built with ASP.NET MVC & Entity Framework</p>
    </footer>
</div>

<style>
    body {
        background-color: #002b45; /* dark blue hue */
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.30);
        }

    .btn-primary {
        background-color: #0078D7;
        border: none;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }
</style>
