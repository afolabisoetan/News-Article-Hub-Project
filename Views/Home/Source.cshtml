@model News_Article_Project.ViewModels.SourceVM
@{
    ViewBag.Title = "Add News Source";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center text-white fw-bold" style="background-color: #0078D7;">
                    <h3 class="mb-0">Add a News Source</h3>
                </div>

                <div class="card-body bg-light p-4">
                    <p class="text-muted small mb-4 text-center">
                        Please ensure all fields are filled in before submitting.
                    </p>

                    @using (Html.BeginForm("Source", "Home", FormMethod.Post))
                    {
                        if (Model.message != null)
                        {
                            <div class="alert alert-danger text-center">@Model.message</div>
                        }
                        <form>
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Source Name</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control rounded-3 shadow-sm", placeholder = "e.g. BBC News" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Source Bias</label>
                            @Html.DropDownListFor(x => x.Bias,
                                new SelectList(new[]
                                {
                                    new { Value = "Left", Text = "Left" },
                                    new { Value = "Center", Text = "Center" },
                                    new { Value = "Right", Text = "Right" }
                                }, "Value", "Text"),
                                "Select Bias",
                                new { @class = "form-select rounded-3 shadow-sm" })
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">Main Website</label>
                            @Html.TextBoxFor(x => x.Website, new { @class = "form-control rounded-3 shadow-sm", placeholder = "https://www.example.com" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow">
                                <i class="bi bi-plus-circle me-2"></i>Add Source
                            </button>
                        </div>
                     </form>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/Home/Index" class="text-decoration-none fw-semibold" style="color: #0078D7;">
                    ← Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #e9f2ff; /* light blue hue background */
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .btn-primary {
        background-color: #0078D7;
        border: none;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }
</style>
