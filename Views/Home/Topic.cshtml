@model News_Article_Project.ViewModels.TopicVM
@{
    ViewBag.Title = "Add Topic";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center text-white fw-bold" style="background-color: #0078D7;">
                    <h3 class="mb-0">Add a New Topic</h3>
                </div>

                <div class="card-body bg-light p-4">
                    <p class="text-muted small mb-4 text-center">
                        Define a new topic category for grouping your articles.
                    </p>

                    @using (Html.BeginForm("Topic", "Home", FormMethod.Post))
                    {
                        if (Model.message != null)
                        {
                            <div class="alert alert-danger text-center">@Model.message</div>
                        }

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Topic Name</label>
                            @Html.TextBoxFor(x => x.Name, new { @class = "form-control rounded-3 shadow-sm", placeholder = "e.g. Ukraine" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Description</label>
                            @Html.TextAreaFor(x => x.Description, new { @class = "form-control rounded-3 shadow-sm", rows = 4, placeholder = "Briefly describe this topic..." })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-3 shadow">
                                <i class="bi bi-plus-circle me-2"></i>Add Topic
                            </button>
                        </div>
                    }
                </div>
            </div>

            <div class="text-center mt-4">
                <a href="/Home/Welcome" class="text-decoration-none fw-semibold" style="color: #0078D7;">
                    ← Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #e9f2ff;
    }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

    .btn-primary {
        background-color: #0078D7;
        border: none;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }
</style>
